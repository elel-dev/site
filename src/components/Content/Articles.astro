---
import ContentLayout from "../../layouts/ContentLayout.astro";
import FeaturedWorks from "../UI/Projects/Featured/Featured";
interface Props {
  linkName: string;
}
const { linkName } = Astro.props as Props;
---

<ContentLayout>
  <div id={linkName} class="decorator" slot="before">
    <span> </span>char articles[] = &#123
  </div>
  <div class="middle" slot="middle">
    <h2>Crypto and cypherpunk dissemination</h2>
    <p class="description">
      Weekly (or at least I try) pubblications on Cypherpunk culture and crypto
      related topics, from beginner to advanced level of difficulty.
    </p>
    <div class="article-links">
      <a
        href="https://mirror.xyz/0x88f1fD4624d81dfD223f305a30e51Ca51229c2D1"
        class="platform-link"
      >
        <svg
          class="platform-icon mirror-icon"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M12 3L4 9V21H20V9L12 3Z"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M12 3V21"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"></path>
        </svg>
        <span>English Articles on Mirror</span>
      </a>
      <a href="https://dev.to/elel-dev" class="platform-link">
        <svg
          class="platform-icon dev-icon"
          viewBox="0 0 448 512"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M120.12 208.29c-3.88-2.9-7.77-4.35-11.65-4.35H91.03v104.47h17.45c3.88 0 7.77-1.45 11.65-4.35 3.88-2.9 5.82-7.25 5.82-13.06v-69.65c-.01-5.8-1.96-10.16-5.83-13.06zM404.1 32H43.9C19.7 32 .06 51.59 0 75.8v360.4C.06 460.41 19.7 480 43.9 480h360.2c24.21 0 43.84-19.59 43.9-43.8V75.8c-.06-24.21-19.7-43.8-43.9-43.8zM154.2 291.19c0 18.81-11.61 47.31-48.36 47.25h-46.4V172.98h47.38c35.44 0 47.36 28.46 47.37 47.28l.01 70.93zm100.68-88.66H201.6v38.42h32.57v29.57H201.6v38.41h53.29v29.57h-62.18c-11.16.29-20.44-8.53-20.72-19.69V193.7c-.27-11.15 8.56-20.41 19.71-20.69h63.19l-.01 29.52zm103.64 115.29c-13.2 30.75-36.85 24.63-47.44 0l-38.53-144.8h32.57l29.71 113.72 29.57-113.72h32.58l-38.46 144.8z"
          ></path>
        </svg>
        <span>Italian Articles on Dev.to</span>
      </a>
    </div>
  </div>
  <p class="decorator" slot="after">&#125</p>
</ContentLayout>

<style>
  .decorator {
    font-size: var(--f-l);
    margin: 2% 0;
    user-select: none;
    opacity: 0.5;
    font-style: italic;
  }

  .middle {
    width: 100%;
    padding-left: 2.5%;
  }

  .middle h2 {
    color: var(--clr-gruv-orange);
    font-weight: bold;
    font-size: var(--f-l);
    margin-top: 1%;
    padding: 0 1%;
  }

  .middle .description {
    background-color: var(--clr-gruv-bg-dark);
    max-width: 60%;
    margin: 2rem 0;
    padding: 2%;
    border-radius: var(--b-radius);
    z-index: 2;
  }

  .article-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .platform-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: var(--clr-gruv-bg-dark);
    border-radius: var(--b-radius);
    transition: transform 0.2s ease-in-out;
    color: var(--clr-gruv-aqua);
    text-decoration: none;
    width: fit-content;
  }

  .platform-link:hover {
    transform: translateX(10px);
  }

  .platform-icon {
    width: 2rem;
    height: 2rem;
  }

  .platform-link span {
    font-size: var(--f-m);
    font-weight: 500;
  }
</style>
