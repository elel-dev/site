---
import ContentLayout from "../../layouts/ContentLayout.astro";
import FeaturedWorks from "../UI/Projects/Featured/Featured";
interface Props {
  linkName: string;
}
const { linkName } = Astro.props as Props;
---

<ContentLayout>
  <div id={linkName} class="decorator" slot="before">
    <span> </span>char articles[] = &#123
  </div>
  <div class="middle" slot="middle">
    <h2>Crypto and cypherpunk dissemination</h2>
    <a href="https://mirror.xyz/0x88f1fD4624d81dfD223f305a30e51Ca51229c2D1">
      <h3>ENG articles</h3>
    </a>
    <a href="https://dev.to/elel-dev">
      <h3>ITA articles</h3>
    </a>
    <p class="description">Weekly (or at least I try) pubblications
    on Cypherpunk culture and crypto related topics, from beginner
    to advanced level of difficulty.
    </p>
  </div>
  <p class="decorator" slot="after">&#125</p>
</ContentLayout>

<style>
  .decorator {
    font-size: var(--f-l);
    margin: 2% 0;
    user-select: none;
    opacity: 0.5;
    font-style: italic;
  }

  .other {
    margin-top: 10%;
    widows: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
  }

  .middle h2 {
    color: var(--clr-gruv-orange);
    font-weight: bold;
    font-size: var(--f-l);
    margin-top: 1%;
    padding: 0 1%;
  }

  .middle a h3 {
    color: var(--clr-gruv-aqua);
    padding: 0 1%;
    font-style: italic;
  }

  .middle .talk-img {
    border-radius: 1%;
    width: 50%;
  }

  .middle .description {
    background-color: var(--clr-gruv-bg-dark);
    max-width: 60%;
    margin: 1% 0;
    padding: 2%;
    border-radius: var(--b-radius);
    z-index: 2;
  }

  .other a {
    color: var(--clr-gruv-aqua);
    border-bottom: 1px solid var(--clr-gruv-aqua);
  }

  .interface {
    padding-left: 5%;
  }
  .blank {
    margin: 1% 0;
  }

  .middle {
    width: 100%;
    padding-left: 2.5%;
  }
</style>
