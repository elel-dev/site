<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    background-color: #0a0a0a;
    background-image: linear-gradient(
      135deg,
      #0a0a0a 0%,
      #1a1a1a 50%,
      #0d1324 100%
    );
  }

  body {
    font-family: "Roboto Condensed", sans-serif;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .container {
    max-width: 900px;
    width: 100%;
    text-align: center;
    padding: 4rem 0;
  }

  .profile-section {
    margin-bottom: 1rem;
  }

  .profile-photo {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(19, 40, 81, 0.7);
    margin-bottom: 2rem;
    box-shadow: 0 0 12px rgba(19, 40, 81, 0.25);
  }

  .name {
    font-size: 3rem;
    font-weight: 700;
    color: #3366cc;
    margin-bottom: 1rem;
  }

  .links-section {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 0.5rem 0 3rem 0;
    flex-wrap: wrap;
  }

  .link-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #4d79cc;
    text-decoration: none;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    border: 1px solid rgba(19, 40, 81, 0.3);
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.2s ease;
  }

  .link-button:hover {
    color: #6699ff;
    border-color: rgba(19, 40, 81, 0.5);
    background: rgba(0, 0, 0, 0.5);
  }

  .link-button [astro-icon] {
    width: 16px;
    height: 16px;
  }

  .theme-selector {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .theme-button {
    background: rgba(0, 0, 0, 0.8);
    border: 2px solid rgba(128, 128, 128, 0.3);
    border-radius: 15px;
    padding: 2.5rem 2rem;
    color: #cccccc;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .theme-button:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(128, 128, 128, 0.2);
    background: rgba(0, 0, 0, 0.9);
    border-color: rgba(160, 160, 160, 0.5);
    color: #ffffff;
  }

  .theme-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .theme-button h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .theme-button p {
    font-size: 1rem;
    opacity: 0.8;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .profile-photo {
      width: 150px;
      height: 150px;
    }

    .name {
      font-size: 2.5rem;
    }

    .theme-selector {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .theme-button {
      padding: 2rem 1.5rem;
    }
  }
</style>
