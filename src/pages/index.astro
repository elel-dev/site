<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Roboto Condensed", sans-serif;
    background: 
      radial-gradient(ellipse at top, rgba(19, 40, 81, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at bottom, rgba(19, 40, 81, 0.08) 0%, transparent 50%),
      linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0d1324 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(19, 40, 81, 0.04) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(19, 40, 81, 0.04) 0%, transparent 50%);
    pointer-events: none;
  }



  .container {
    max-width: 900px;
    width: 100%;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .profile-section {
    margin-bottom: 1rem;
  }

  .profile-photo {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(19, 40, 81, 0.7);
    margin-bottom: 2rem;
    box-shadow: 0 0 12px rgba(19, 40, 81, 0.25);
    position: relative;
  }

  .name {
    font-size: 3rem;
    font-weight: 700;
    color: #3366cc;
    margin-bottom: 1rem;
    text-shadow: 0 0 4px rgba(19, 40, 81, 0.5);
    position: relative;
  }

  .links-section {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 0.5rem 0 3rem 0;
    flex-wrap: wrap;
  }

  .link-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #4d79cc;
    text-decoration: none;
    font-weight: 400;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    border: 1px solid rgba(19, 40, 81, 0.3);
    background: rgba(0, 0, 0, 0.3);
  }

  .link-button:hover {
    color: #6699ff;
    border-color: rgba(19, 40, 81, 0.5);
    background: rgba(0, 0, 0, 0.5);
  }

  .link-button [astro-icon] {
    width: 16px;
    height: 16px;
    color: #4d79cc;
  }

  .theme-selector {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .theme-button {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(128, 128, 128, 0.3);
    border-radius: 15px;
    padding: 2.5rem 2rem;
    color: #cccccc;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .theme-button:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(128, 128, 128, 0.2);
    background: rgba(0, 0, 0, 0.9);
    border-color: rgba(160, 160, 160, 0.5);
    color: #ffffff;
  }

  .theme-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .theme-button h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .theme-button p {
    font-size: 1rem;
    opacity: 0.8;
    line-height: 1.4;
  }



  @media (max-width: 768px) {
    .profile-photo {
      width: 150px;
      height: 150px;
    }

    .name {
      font-size: 2.5rem;
    }

    .links-section {
      gap: 0.75rem;
      margin: 1.5rem 0 2.5rem 0;
    }

    .link-button {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }

    .link-icon {
      width: 14px;
      height: 14px;
    }

    .theme-selector {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .theme-button {
      padding: 2rem 1.5rem;
    }
  }
</style>
